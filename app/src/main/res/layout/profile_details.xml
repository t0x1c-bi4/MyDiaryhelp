<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/resource__" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                style="@style/MyTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="Имя"
                android:layout_weight="1"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textName"
                style="@style/MyTextViewStyle"
                android:layout_width="270dp"
                android:layout_height="46dp"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="1"
                android:textColor="@color/darkBlue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/surname"
                style="@style/MyTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:fontFamily="@font/open_sans_italic"
                android:text="Фамилия"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textSurname"
                style="@style/MyTextViewStyle"
                android:layout_width="270dp"
                android:layout_height="46dp"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="2"
                android:textColor="@color/darkBlue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nickname"
                style="@style/MyTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:fontFamily="@font/open_sans_italic"
                android:text="Ник/прозвище"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textNickname"
                style="@style/MyTextViewStyle"
                android:layout_width="270dp"
                android:layout_height="46dp"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="3"
                android:textColor="@color/darkBlue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/birthday"
                style="@style/MyTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="День рождения"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textBirthday"
                android:layout_width="270dp"
                android:layout_height="46dp"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="4"
                android:textColor="@color/darkBlue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/study"
                style="@style/MyTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="Я учусь в"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textStudy"
                style="@style/MyTextViewStyle"
                android:layout_width="270dp"
                android:layout_height="46dp"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="5"
                android:textColor="@color/darkBlue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zodiac"
                style="@style/MyTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="Знак зодиака"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textZodiac"
                style="@style/MyTextViewStyle"
                android:layout_width="270dp"
                android:layout_height="46dp"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="6"
                android:textColor="@color/darkBlue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hobbi"
                style="@style/MyTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="Увлечения"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textHobbi"
                style="@style/MyTextViewStyle"
                android:layout_width="270dp"
                android:layout_height="46dp"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="7"
                android:textColor="@color/darkBlue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/social"
                style="@style/MyTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="Твои соц сети"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textSocial"
                style="@style/MyTextViewStyle"
                android:layout_width="270dp"
                android:layout_height="46dp"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="8"
                android:textColor="@color/darkBlue" />
        </LinearLayout>

        <TextView
            android:id="@+id/loveBloggers"
            style="@style/MyTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:fontFamily="@font/open_sans_italic"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Любимые блогеры, каналы"
            android:textColor="@color/darkBlue"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/social" />

        <TextView
            android:id="@+id/textLoveBloggers"
            style="@style/MyTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:fontFamily="@font/open_sans_italic"
            android:gravity="center|left"
            android:text="9"
            android:textColor="@color/darkBlue" />

        <TextView
            android:id="@+id/loveText"
            style="@style/MyTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_italic"
            android:gravity="center|left"
            android:text="Любимая фраза"
            android:textColor="@color/darkBlue"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/social" />

        <TextView
            android:id="@+id/textLoveText"
            style="@style/MyTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:fontFamily="@font/open_sans_italic"
            android:gravity="center|left"
            android:text="10"
            android:textColor="@color/darkBlue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dream"
                style="@style/MyTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="Я мечтаю о"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textDream"
                style="@style/MyTextViewStyle"
                android:layout_width="270dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="11"
                android:textColor="@color/darkBlue" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonEdit"
            style="@style/MyTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/sky"
            android:fontFamily="@font/oi"
            android:text="редактировать"
            android:textColor="@color/beige">

        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonBack"
                style="@style/MyTextViewStyle"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/beige"
                android:fontFamily="@font/oi"
                android:text="назад"
                android:textColor="@color/hotPink"

                />

            <Button
                android:id="@+id/buttonDelete"
                style="@style/MyTextViewStyle"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/hotPink"
                android:fontFamily="@font/oi"
                android:text="удалить"
                android:textColor="@color/beige"

                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>