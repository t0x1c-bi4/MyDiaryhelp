<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:fontFamily="@font/oi"
                android:gravity="center"
                android:text="Моё здоровье"
                android:textColor="@color/hotPink"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/glass_water" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:fontFamily="@font/open_sans_italic"
                android:text="Дата:"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/editDate"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_italic"
                android:hint="напиши дату"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/glass"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:text="Выпито стаканов:"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editGlass"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_italic"
                android:gravity="center|left"
                android:hint="напиши кол-во"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:visibility="visible" />


        </LinearLayout>
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/sky"
            android:fontFamily="@font/marck_script"
            android:text="сохранить"
            android:textSize="20sp"
            android:textColor="@color/darkBlue" />

        <ListView
            android:id="@+id/listViewProfiles"
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:fontFamily="@font/open_sans_italic"
            android:textColor="@color/darkBlue" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/beige"
            android:fontFamily="@font/oi"
            android:text="назад"
            android:textColor="@color/hotPink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.93" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
